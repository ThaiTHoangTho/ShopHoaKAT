<body>
    <div class="super_container">

        <!-- Header -->

        <header>

            <!-- Top Navigation -->

            <div class="main_nav_container" style="background-color: #E1CFBB ">
                <div class="container">
                    <div class="row" style="margin-right:-150px">
                        <div class="col-lg-12 text-right">
                            <div class="logo_container">
                                <a href="/"><span style="font-family: 'Merienda', cursive; color:saddlebrown ">HIGHKAT FLOWER</span></a>
                            </div>
                            <nav class="navbar">
                                @Html.Action("MenuTop", "Menu")
                                <ul class="navbar_user">
                                    <li>
                                        <form action="/Product/Search" method="post">
                                            <div class="form-group form-inline">
                                                <input placeholder="Tìm kiếm" name="keyword" class="form-control form-inline" />
                                                <button type="submit" class="btn btn-outline-light btn-search">
                                                    <i class="fa fa-search" aria-hidden="true"></i>
                                                </button>
                                            </div>
                                        </form>
                                    </li>
                                    <li class="checkout">
                                        <a href="/shoppingcart">
                                            <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                            <span id="checkout_items" class="checkout_items">0</span>
                                        </a>
                                    </li>
                                </ul>
                                @{var user = Session["taikhoan"] as ShopHoaTuoi.Models.EF.TAIKHOAN;}
                                @{if (user != null)
                                    {
                                        <li class="account" style="background-color: #E1CFBB ">
                                            <a href="#">
                                                @user.KHACHHANG.tenkh
                                                <i class="fa fa-angle-down"></i>
                                            </a>
                                            <ul class="account_selection">
                                                <li><a href="/login/Logout"><i class="fa fa-sign-in" aria-hidden="true"></i>Đăng xuất</a></li>
                                                @*
                                                    <li><a href="/DonDatHang/Details"><i class="fa fa-user-plus" aria-hidden="true"></i>Xem đơn hàng</a></li>*@
                                                @Html.ActionLink("Xem chi tiết đơn hàng", "Details", "DonDatHang", new { customerId = user.makh }, null)
                                            </ul>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="account" style="background-color: #E1CFBB ">
                                            <a href="/login"><i class="fa fa-user" aria-hidden="true"></i></a>
                                        </li>
                                        <ul class="account_selection">
                                            <li><a href="#"><i class="fa fa-sign-in" aria-hidden="true"></i>Đăng xuất</a></li>
                                            <li><a href="#"><i class="fa fa-user-plus" aria-hidden="true"></i>Xem đơn hàng</a></li>
                                        </ul>
                                    }
                                }
                                <div class="hamburger_container">
                                    <i class="fa fa-bars" aria-hidden="true"></i>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>

        </header>

        @RenderBody()


        <!-- Footer -->

        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="footer_nav_container d-flex flex-sm-row flex-column align-items-center justify-content-lg-start justify-content-center text-center">
                            <ul class="footer_nav">
                                <li><a href="#">Bài viết</a></li>
                                <li><a href="contact.html">Contact us</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="footer_social d-flex flex-row align-items-center justify-content-lg-end justify-content-center">
                            <ul>
                                <li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-skype" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-pinterest" aria-hidden="true"></i></a></li>
                            </ul>
                        </div>
                        <div class="hamburger_container">
                            <i class="fa fa-bars" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
               @* <div class="tg_contact_fixed_2021">
                    <ul>
                        <li>
                            <a href="https://www.facebook.com/highkat" data-toggle="tooltip" data-html="true" target="_blank" data-placement="left" title="
                    Chat Messenger" data-original-title="Messenger" data-wpel-link="external" rel="nofollow">
