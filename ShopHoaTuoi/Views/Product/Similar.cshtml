
<div class="product-grid">

    <!-- Product 1 -->

    @foreach (var item in ViewBag.Product)
    {

        <div class="product-item @item.LOAIHOA.maloai" style="height:400px">
            <div class="product discount product_filter" style="height:340px">
                <div class="product_image" style="width:150px;height:250px">
                    <img src="@item.anh" alt="@item.tenhoa" style="width:160px;height:250px">
                </div>
                <div class="product_info">
                    <h6 class="product_name"><a href="/product/detail/@item.mahoa">@item.tenhoa</a></h6>
                    <div class="product_price">@ShopHoaTuoi.Common.Common.FormatNumber(item.giaban, 0)</div>

                </div>
            </div>
            <div class="red_button add_to_cart_button"><a href="#" class="btnAddtocart" data-id="@item.mahoa">add to cart</a></div>
        </div>



    }
</div>