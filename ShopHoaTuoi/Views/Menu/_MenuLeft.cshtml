
@model IEnumerable<ShopHoaTuoi.Models.EF.LOAIHOA>
<link href="~/Content/assets/styles/main_styles.css" rel="stylesheet" />
@if (Model != null && Model.Any())
{
    <ul class="sidebar_categories">
        @foreach (var item in Model)
        {
            if (ViewBag.CateId == item.maloai)

            {
                <li class="active"><a href="/danh-muc-san-pham/@(item.maloai)"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>@item.tenloai</a></li>
            }
            else
            {

                <li><a href="/danh-muc-san-pham/@(item.maloai)">@item.tenloai</a></li>
            }

        }
    </ul>
}

